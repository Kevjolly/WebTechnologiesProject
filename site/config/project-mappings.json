{
    "settings": {
        "number_of_shards": 1,
        "analysis": {
            "tokenizer": {
                "ngram_tokenizer": {
                    "type": "ngram",
                    "min_gram": 1,
                    "max_gram": 10
                }
            },
            "analyzer": {
                "english_analyzer": {
                    "type": "standard",
                    "stopwords": "_english_"
                },
                "ngram_analyzer": {
                    "type": "custom",
                    "tokenizer": "ngram_tokenizer",
                    "filter": [
                        "lowercase"
                    ]
                }
            }
        }
    },
    "mappings": {
        "project": {
            "properties": {
                "created": {
                    "type": "long"
                },
                "desc": {
                    "type": "text",
                    "analyzer": "english_analyzer"
                },
                "skills": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "name": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                }
            }
        }
    }
}